<% layout('layouts/questionBoilerplate') %>
<div class="row">
    <div class="col-lg-1"></div>

    <div class="col-lg-10">
        <h1 class="text-center"><%= quiz.name %></h1>
        <form action="/quizzes/<%= quiz._id %>/questions/score" method="POST">
        <% quiz.questions.forEach((ques,i) => { %>
        <div class="card shadow-none p-3 mb-3 bg-light rounded">
            <div class="card-body">
                <h5 class="card-title">Q. <%= ques.question %></h5>

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answer[ques<%= i %>]" id="flexRadioDefault1" value="1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            <%= ques.option[0] %> 
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answer[ques<%= i %>]" id="flexRadioDefault2" value="2">
                        <label class="form-check-label" for="flexRadioDefault2">
                            <%= ques.option[1] %>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answer[ques<%= i %>]" id="flexRadioDefault3" value="3">
                        <label class="form-check-label" for="flexRadioDefault3">
                            <%= ques.option[2] %>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="Answer[ques<%= i %>]" id="flexRadioDefault4" value="4">
                        <label class="form-check-label" for="flexRadioDefault4">
                            <%= ques.option[3] %>
                        </label>
                    </div>
                
            </div>
        </div>
        <% }); %>
        <div class="text-center">
            <button class="btn btn-primary btn-lg">Submit</button>
        </div>
        </form>
    </div>

    <div class="col-lg-1"></div>
</div>